<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="51dp">

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/main_bottom_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_home"
                style="@style/Main_RG"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:checked="true"
                android:drawableTop="@drawable/main_home_selector"
                android:scaleX="1"
                android:scaleY="1"
                android:text="  首页  "
                android:textColor="@drawable/main_text_color_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/main_near"
                style="@style/Main_RG"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:checked="false"
                android:drawableTop="@drawable/main_near_selector"
                android:scaleX="1"
                android:scaleY="1"
                android:text="附近商城"
                android:textColor="@drawable/main_text_color_selector"
                android:textSize="12sp" />


            <RadioButton
                android:id="@+id/main_my"
                style="@style/Main_RG"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:checked="false"
                android:drawableTop="@drawable/main_my_selector"
                android:scaleX="1"
                android:scaleY="1"
                android:text="个人中心"
                android:textColor="@drawable/main_text_color_selector"
                android:textSize="12sp" />

        </RadioGroup>

    </LinearLayout>


</RelativeLayout>

