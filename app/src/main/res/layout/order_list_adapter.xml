<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_look_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corners_has_adapter_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：524524534523"
                android:textColor="#D5D5D5"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="等待付款"
                android:textColor="#EF1616"
                android:textSize="16sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#999999"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp">

            <com.wangjia.yijiale.views.RoundAngleImageView
                android:id="@+id/riv_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@mipmap/loop"
                />

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/riv_image">

                <TextView
                    android:id="@+id/tv_veget_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="非常好家常菜"
                    android:textColor="#000000"

                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_veget_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/riv_image"
                android:text="下单时间：2015：12-12"
                android:textColor="#999999"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_veget_time"
                android:layout_toRightOf="@+id/riv_image"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="总价："
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="35:元"
                    android:textColor="#FF440B"
                    android:textSize="16sp"/>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll_price"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/moren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp">


                    <TextView
                        android:id="@+id/tv_dicus"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/corners_has_cancle_color_blue_bg"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="评论商家"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_pay"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/corners_has_colorr_bg"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="付   款"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:visibility="visible"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/moren">

                    <TextView
                        android:id="@+id/tv_canle_pay"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/corners_has_cancle_color_bg"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="取消订单"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:visibility="visible"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
